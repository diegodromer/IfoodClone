<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Status do pedido"
                android:textColor="#3B3B3B"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F2F2"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RadioButton
                android:id="@+id/rb_pendente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Pendente"/>

            <RadioButton
                android:id="@+id/rb_preparacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Em preparação"/>

            <RadioButton
                android:id="@+id/rb_saiu_entrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Saiu para entrega"/>

            <RadioButton
                android:id="@+id/rb_entregue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Entregue"/>

            <RadioButton
                android:id="@+id/rb_cancelado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Cancelado"/>

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fechar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fechar"
                android:textColor="#3B3B3B"
                android:background="?android:attr/selectableItemBackground"
                android:textAllCaps="false"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F2F2F2"/>

            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3B3B3B"
                android:layout_weight="1"
                android:text="Salvar"
                android:background="?android:attr/selectableItemBackground"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
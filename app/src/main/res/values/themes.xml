<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IfoodClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_principal</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cor_principal</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.IfoodClone2" parent="Theme.IfoodClone">
        <item name="colorPrimaryVariant">@color/cor_principal</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/cor_principal</item>
        <item name="android:statusBarColor">@color/cor_principal</item>
    </style>

    <style name="ThemeProgressBar" parent="Theme.IfoodClone">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ThemeProgressBar2" parent="Theme.IfoodClone">
        <item name="colorAccent">#FF0000</item>
    </style>

    <style name="CustomStyleTabLayout" parent="Theme.IfoodClone">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ThemeBnvOn">
        <item name="android:textSize">14sp</item>
    </style>
</resources>